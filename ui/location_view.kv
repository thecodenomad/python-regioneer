<LocationToolbar>:
    padding: [dp(0),dp(5),dp(0),dp(5)]
    size_hint_y: None
    default_size_hint: 1, None
    height: dp(25)
    orientation: 'horizontal'
    Button:
        text: "+"
        on_press: root.add_profile()
    Button:
        text: "-"
        on_press: root.add_profile()
    Button:
        text: "Clone"
        on_press: root.add_profile()

<LocationRow@BoxLayout>:
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            size: self.size
            pos: self.pos
    value: ''
    GridLayout:
        cols: 2
        Label:
            text: "Location {}".format("name")
        Label:
            text: "Active: {}".format("blah")

<LocationView@GridLayout>:
    GridLayout:
        width: root.width
        height: root.height
        padding: dp(10),0,dp(10),0
        rows: 3
        Label:
            size_hint: 1, None
            height: dp(30)
            halign: 'center'
            text: "Locations"

        RecycleView:
            id: loc_profiles
            scroll_type: ['bars', 'content']
            scroll_wheel_distance: dp(114)
            bar_width: dp(5)
            viewclass: 'LocationRow'
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(2)

        LocationToolbar:
            id: location_tool_bar
            size_hint: 1, None
            height: dp(30)
