<MainUI@Screen>:
    GridLayout:
        cols: 2
        LocationView:
            size_hint_x: .25
            id: loc_view

        GridLayout:
            size_hint_x: .75
            padding: 0,0,dp(10),0
            rows: 4
            Label:
                size_hint_y: None
                height: dp(30)
                text: "Verifiable Hints"

            HintView:
                id: hint_view

            HintToolbar:
                id: hint_toolbar
                padding: 0,dp(5),0,0

            ActionsView:
                id: actions_view
                padding: 0,dp(5),0,0